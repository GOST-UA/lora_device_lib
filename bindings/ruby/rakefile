require 'rake/testtask'
require 'rake/extensiontask'

Rake::ExtensionTask.new  do |ext|
    ext.name = "ext_mac"
    ext.ext_dir = "ext/ldl/ext_mac"
    ext.lib_dir = "lib/ldl"
end

Rake::ExtensionTask.new  do |ext|
    ext.name = "ext_frame"
    ext.ext_dir = "ext/ldl/ext_frame"
    ext.lib_dir = "lib/ldl"
end

Rake::TestTask.new do |t|
    t.name = :test
    t.libs << "lib"
    t.test_files = FileList["test/**/tc_*.rb"]    
end

task :default => :test

