require 'rake/testtask'
require 'rake/extensiontask'

Rake::ExtensionTask.new  do |ext|
    ext.name = "ext_ldl"
    ext.ext_dir = "ext/lora_device_lib/ext_ldl"
    ext.lib_dir = "lib/lora_device_lib"
end

Rake::ExtensionTask.new  do |ext|
    ext.name = "ext_frame"
    ext.ext_dir = "ext/lora_device_lib/ext_frame"
    ext.lib_dir = "lib/lora_device_lib"
end

Rake::TestTask.new do |t|
    t.name = :test
    t.libs << "lib"
    t.test_files = FileList["test/**/tc_*.rb"]    
end

task :default => :test

